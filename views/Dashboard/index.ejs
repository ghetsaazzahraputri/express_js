<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<title>Hello, world!</title>
    <style>
body {
    font-family: 'Segoe UI', sans-serif;
    background: rgb(182, 233, 255);
}

.sidebar {
    height: 100%;
    width: 280px;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: white;
    overflow-x: hidden;
    padding-top: 16px;
    box-shadow: 0 0 1px 0;
}

.sidebar a {
     padding: 6px 8px 6px 16px;
     text-decoration: none;
     font-size: 16px;
     color: red;
     display: block;
     margin-left: 20px;
 }

.sidebar a:hover {
   background: darkcyan;
   border-color: darkcyan;
   color: white;
   width: 250px;
   border-radius: 5px;
 }

.list {
   margin-top: 20px;
}

 img {
    width: 30px;
    height: 30px;
    border-radius: 50px;                        
}

.main {
    margin-left: 300px;
    padding: 0px 70px;
    background: white;
    margin-top: 80px;
    height: 500px;
    border-radius: 5px;
    box-shadow: 0 1px 2px rgb(68, 68, 68);
}

@media screen and (max-height: 450px) {
 .sidebar {
     padding-top: 15px;
}

.sidebar a {
     font-size: 18px;
}
}
.form-group{
     margin-top: 30px;
 }
</style>
</head>

<body>

    <div class="sidebar">
        <a href="#home">Ghetsa azzahra putri</a>
        <div class="list">
            <a href="#services"><i class="fa fa-fw fa-home"></i> Home</a>
            <a href="#contact"><i class="fa fa-sitemap"></i> Inventory</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="main">
            <form action="http://localhost:3000/dashboard/store" method="post">
                <br>
                <div class="form-group">
                    <h3 class="text-center">Inventory</h3>
                    <label for="exampleInputHargaBrg">Nama Barang</label>
                    <input type="text" class="form-control" id="exampleInputNamaBrg" aria-describedby="emailHelp" name="nama_barang">
                </div>
                <div class="form-group">
                    <label for="exampleInputHargaBrg">Jumlah Barang</label>
                    <input type="text" class="form-control" id="exampleInputJmlhBrg" name="jumlah_barang">
                </div>
                <div class="form-group">
                    <label for="exampleInputHargaBrg">Harga Barang</label>
                    <input type="text" class="form-control" id="exampleInputHargaBrg" name="harga_barang">
                </div>
                <center><button type="submit" class="btn btn-info btn-sm-10 mt-5" style="width: 400px;">Sumbit Barang</button></center>
            </form>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
